<h2>WORDS</h2>
<table class="table table-striped">
  <thead>
    <th>Text</th>
    <th>Letters</th>
    <th>Edit</th>
    <th>Delete</th>
  </thead>
  <tbody>
    <% @words.each do |word| %>
    <tr>
      <td><a href="<%= "/words/#{word.id}" %>"><%= "#{word.text}" %></a></td>
      <td><%= "#{word.letters}" %></td>
      <td><a href="<%= "/words/#{word.id}/edit" %>"><i class="fa fa-pencil-square-o"></i></a></td>
      <td>
        <form action="<%= "/words/#{word.id}" %>" method="post">
          <input type="hidden" name="_method" value="delete">
          <button class="danger" type="submit"><i class="fa fa-trash-o"></i></button>
        </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>